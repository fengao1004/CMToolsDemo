<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/window_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/audio_background">

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5pt"
            android:layout_marginTop="120sp"
            android:gravity="center_vertical"
            android:src="@drawable/recordimage" />

        <Chronometer
            android:id="@+id/window_chronometer_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350sp"
            android:format=""
            android:textColor="#3d3c3c"
            android:textSize="100px" />

        <TextView
            android:id="@+id/window_alltimelen_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="420sp"
            android:text="00:00"
            android:textColor="#3d3c3c"
            android:textSize="60px" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25sp"
                android:orientation="vertical">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/window_playaudio_single"
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:background="@drawable/window_play" />

                <TextView
                    android:id="@+id/tv_play_audio_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="播放"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="35sp"
                android:orientation="vertical">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/window_stopaudio_single"
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:background="@drawable/stop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="停止"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>